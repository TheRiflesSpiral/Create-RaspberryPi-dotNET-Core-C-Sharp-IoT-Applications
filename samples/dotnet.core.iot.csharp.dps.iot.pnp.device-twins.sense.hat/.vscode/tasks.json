{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "ARM32DebugPublish",
            "command": "sh",
            "type": "shell",
            "problemMatcher": "$msCompile",
            "args": [
                "-c",
                "\"dotnet publish -r linux-arm -c Debug -o ./bin/linux-arm/publish ./${workspaceFolderBasename}.csproj && rsync -rvuz ./bin/linux-arm/publish/ pi@rpi3a:~/${workspaceFolderBasename}\"",
            ]
        },
        {
            "label": "ARM32ReleasePublish",
            "command": "sh",
            "type": "shell",
